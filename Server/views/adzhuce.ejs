<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <script src="/jquery.js"></script>
    <title>
        <%= title%>
    </title>
</head>

<body>
    <h1>
        <%= title%>
    </h1>

    <form action="/adzhuce" method="post" class="adzhuce">
        账号 :
        <input type="text" name="adname" required>
        <br>
        <br> 密码 :
        <input type="password" name="password" required>
        <br>
        <br> 确认 :
        <input type="password" name="re-password" required>
        <br>
        <br>
        <a href="/adlogin">管理员登录</a>
        <button type="submit"> 注册 </button>
    </form>
</body>
<script>
    $('.adzhuce').submit(function (ev) {
        ev.preventDefault();
        var data = $(this).serialize();
        $.post('/adzhuce', data, function (resData) {
            if (resData.error == 1) {
                alert(resData.message)
                location.href = '/adzhuce'
            } else {
                alert(resData.message)
                location.href = '/adlogin'
            }
        })
    })


</script>

</html>